.btn-apply {
    
    background-color: #ac49ed; /* Orange button */
      border-color: #ac49ed; /* Orange border for button */
      transition: background-color 0.3s ease-in-out, border-color 0.3s ease-in-out; /* Add transition for smooth hover effect */
     
        width: 50%; /* Adjust width as needed */
         /* Center the button horizontally */
        display: block; /* Ensure it takes the width specified */
        text-align: center; /* Center the text within the button */
      
    }
    .btn-apply:hover {
      background-color: #ac49ed; /* Darker shade of orange on hover */
      border-color: #ac49ed; /* Darker shade of orange border on hover */
