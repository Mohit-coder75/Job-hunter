</style>

<div class="container-fluid ">
    <div class="background">
        <div class="cube"></div>
        <div class="cube"></div>
        <div class="cube"></div>
        <div class="cube"></div>
        <div class="cube"></div>
    </div>
    <header>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/cards">Jobs</a></li>
                <li><a href="#">Services</a></li>
                <li><a href="#">Portfolio</a></li>
                <% if (dropdownContent !== "Guest") { %>
                    <li><a href="/PostJob">Post Jobs</a></li>
                    <li><a href="/logout">Logout</a></li>
                <% } %>
            </ul>
        </nav>
        <div class="logo"><span>Job-A-Thon</span></div>
        <div class="container">
    
            <!-- Banner Image -->
            <div class="banner">
                <img src="https://files.codingninjas.com/web-banner-28759.png" alt="Banner Image" class="image" >
            </div>
           
        
        <main>
           <!-- Job Details -->
    <div class="job">
        
        <div>
            <div class="job-title"><%= job.title %></div>
            <div class="job-details">
                <!-- Company -->
                <div class="job-info">
                    <i class="fas fa-building company-icon"></i>
                    <strong class="company-label">Company:</strong>
                    <span class="company-name"><%= job.company %></span>
                </div>
                <!-- Location -->
                <div class="job-info">
                    <i class="fas fa-map-marker-alt location-icon"></i>
                    <strong class="location-label">Location:</strong>
                    <span class="location"><%= job.location %></span>
                </div>
                <!-- Salary -->
                <div class="job-info">
                    <i class="fas fa-money-bill-wave salary-icon"></i>
                    <strong class="salary-label">Salary:</strong>
                    <span class="salary"><%= job.salary %></span>
                </div>
                <!-- Experience -->
                <div class="job-info">
                    <i class="fas fa-briefcase experience-icon"></i>
                    <strong class="experience-label">Experience:</strong>
                    <span class="experience"><%= job.experience %></span>
                </div>
                <% if (dropdownContent === req.session.userName) { %>
                    <div class="job-info">
                        <i class="fas fa-users experience-icon"></i> <!-- Different icon class -->
                        <a href="/application/<%= job.id %>" class="experience-label"> <!-- Anchor wrapping the label -->
                            <strong>Applicants:</strong>
                        </a>
                        <span class="experience">
                            <%= job.applicants %>
                        </span>
                    </div>
                <% } else { %>
                    <div class="job-info">
                        <i class="fas fa-users experience-icon"></i> <!-- Different icon class -->
                        <span class="experience-label"> <!-- Plain text label -->
                            <strong>Applicants:</strong>
                        </span>
                        <span class="experience">
                            <%= job.applicants %>
                        </span>
                    </div>
                <% } %>
                
                
                <!-- Apply By -->
                <div class="job-info apply-by">
                    <i class="far fa-calendar-alt apply-by-icon"></i>
                    <strong class="apply-by-label">Apply By:</strong>
                    <span class="apply-by-date"><%= job.applyBy %></span>
                </div>
                <!-- Edit and Delete Icons -->
              
            </div>
            <!-- Skills -->
            <div class="skills">
                <strong>Skills:</strong>
                <% if (job.skills && Array.isArray(job.skills)) { %>
                    <div class="skills">
                        <% job.skills.forEach(skill => { %>
                            <span class="skill"><%= skill %></span>
                        <% }) %>
                    </div>
                <% } else { %>
                    <p>No skills specified</p>
                <% } %>
            </div>
            <!-- Apply Button -->
            <% if (dropdownContent === "Guest") { %>
            <a href="/apply/<%= job.id %>" class="btn-apply w-1/2 py-2 rounded-md text-white font-semibold transition duration-300 ease-in-out">Apply Now</a>
            <% }%>
        </div>
        <!-- Job Description -->
        <div class="discription">
            <div class="job-info">
                <p class="description"><%= job.description %></p>
            </div>
        </div>
        <% if (dropdownContent === req.session.userName) { %>
            <div class="edit-delete-icons">
                <a href="/editJob/<%= job.id %>" class="edit-link">
                    <i class="fas fa-edit edit-icon" title="Edit"></i>
                </a>
                <form action="/delete/<%= job.id %>" method="POST" class="delete-form">
                    <button type="submit" class="delete-button">
                        <i class="fas fa-trash delete-icon" title="Delete"></i>
                    </button>
                </form>
            </div>
        <% } %>
    </div>
            
            
    
            
        </main>
        
    </div>
    </header>
</div>

