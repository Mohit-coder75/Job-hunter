<style>
    body {
        font-family: 'Josefin Sans', sans-serif;
        box-sizing: border-box;
        width: 100%;
        height: auto;
    }
    .container-fluid {
        height: 100%;
        margin: 0;
        padding: 0;
        width: 100%;
        background: #FFF;
    }
    .background {
        background: linear-gradient(132deg, #FC415A, #591BC5, #212335);
        background-size: 400% 400%;
        animation: Gradient 15s ease infinite;
        position: relative;
        height: 100vh;
        width: 100%;
        overflow: hidden;
        padding: 0;
        margin: 0;
    }
    .cube {
        position: absolute;
        top: 80vh;
        left: 45vw;
        width: 10px;
        height: 10px;
        border: solid 1px #D7D4E4;
        transform-origin: top left;
        transform: scale(0) rotate(0deg) translate(-50%, -50%);
        animation: cube 12s ease-in forwards infinite;
    }
    .cube:nth-child(2n) {
        border-color: #FFF;
    }
    .cube:nth-child(2) {
        animation-delay: 2s;
        left: 25vw;
        top: 40vh;
    }
    .cube:nth-child(3) {
        animation-delay: 4s;
        left: 75vw;
        top: 50vh;
    }
    .cube:nth-child(4) {
        animation-delay: 6s;
        left: 90vw;
        top: 10vh;
    }
    .cube:nth-child(5) {
        animation-delay: 8s;
        left: 10vw;
        top: 85vh;
    }
    .cube:nth-child(6) {
        animation-delay: 10s;
        left: 50vw;
        top: 10vh;
    }
    header {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        margin: 0;
        padding: 0;
    }
    nav {
        color: #FFF;
        float: right;
        margin: 30px 90px;
    }
    nav ul {
        list-style: none;
    }
    nav ul li {
        float: left;
        transition: .3s;
    }
    nav ul li a {
        text-decoration: none;
        color: #EFEEF5;
        transition: .5s;
        font-size: 15px;
        margin-left: 26px;
        padding-right: 20px;
    }
    nav ul li:hover a {
        text-decoration: none;
        color: #591BC5;
    }
    nav ul li:hover {
        background: #EFEEF5;
        border-radius: 5px;
    }
    .logo {
        width: 90px;
        height: 90px;
        background: linear-gradient(45deg, #FC415A, #591BC5);
        margin: 40px 63px;
        float: left;
        transform: rotate(-30deg);
        display: flex;
        justify-content: center;
        align-items: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }
    .logo:hover {
        transform: rotate(-30deg) scale(1.1);
    }
    .logo span {
        color: #FFF;
        font-size: 1.5em;
        line-height: 1.4;
        font-weight: bold;
        transform: rotate(30deg);
        padding-left: 7px;
    }
    .header-content {
        margin-top: 15%;
        text-align: center;
        color: #EFEEF5;
    }
    .header-content h1 {
        text-transform: uppercase;
        font-size: 3em;
        letter-spacing: 1px;
    }
    .header-content p {
        font-size: 20px;
        line-height: 1.5;
        margin: 20px auto;
    }
    .header-content button {
        width: 140px;
        margin: 20px 10px;
        color: #591BC5;
        font-size: 17px;
        border: 1px solid #EFEEF5;
        font-weight: 500;
        background: #EFEEF5;
        border-radius: 20px;
        padding: 10px;
        cursor: pointer;
        transition: .3s;
    }
    .header-content button:hover {
        border-radius: 0;
    }
    @keyframes Gradient {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }
    @keyframes cube {
        from {
            transform: scale(0) rotate(0deg) translate(-50%, -50%);
            opacity: 1;
        }
        to {
            transform: scale(20) rotate(960deg) translate(-50%, -50%);
            opacity: 0;
        }
    }

    @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeOut {
            from {
                opacity: 1;
                transform: translateY(0);
            }
            to {
                opacity: 0;
                transform: translateY(20px);
            }
        }

        .header-content {
            text-align: center;
            padding: 20px;
        }

        .header-content h1, .header-content p, .header-content a button {
            animation: fadeIn 2s ease-in-out;
        }

        .fade-out {
            animation: fadeOut 2s ease-in-out;
        }
        
        .header-content h1 {
            animation-delay: 0s;
        }

        .header-content p {
            animation-delay: 0.5s;
        }

        .header-content a button {
            animation-delay: 1s;
            margin: 10px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
        }
</style>

<div class="container-fluid">
    <div class="background">
        <div class="cube"></div>
        <div class="cube"></div>
        <div class="cube"></div>
        <div class="cube"></div>
        <div class="cube"></div>
    </div>
    <header>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/cards">Jobs</a></li>
                <li><a href="#">Services</a></li>
                <li><a href="#">Portfolio</a></li>
                <% if (dropdownContent !== "Guest") { %>
                    <li><a href="/PostJob">Post Jobs</a></li>
                    <li><a href="/logout">Logout</a></li>
                <% } %>
            </ul>
        </nav>
        <div class="logo"><span>Job-A-Thon</span></div>
        <section class="header-content">
            <h1>Welcome to Our Job Portal</h1>
            <p>We're dedicated to connecting talented individuals with amazing opportunities.<br>
               Explore high-quality job listings and find the perfect match to advance your career.</p>
            <a href="/cards"><button>Find a Job</button></a>
            <a href="/register"><button>Post a Job</button></a>
        </section>
    </header>
</div>
